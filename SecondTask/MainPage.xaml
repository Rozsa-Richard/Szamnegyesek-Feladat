<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecondTask.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <BoxView Grid.Row="0" Grid.Column="0" Color="LightBlue" Margin="10"/>
            <Label Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" Text="0" x:Name="box0" TextColor="Black"/>
            <BoxView Grid.Row="0" Grid.Column="1" Color="Aquamarine" Margin="10"/>
            <Label Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" Text="0" x:Name="box1" TextColor="Black"/>
            <BoxView Grid.Row="0" Grid.Column="2" Color="LightBlue" Margin="10"/>
            <Label Grid.Row="0" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" Text="0" x:Name="box2" TextColor="Black"/>

            <BoxView Grid.Row="1" Grid.Column="0" Color="Aquamarine" Margin="10"/>
            <Label Grid.Row="1" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" Text="0" x:Name="box3" TextColor="Black"/>
            <BoxView Grid.Row="1" Grid.Column="1" Color="LightBlue" Margin="10" />
            <Label Grid.Row="1" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" Text="0" x:Name="box4" TextColor="Black"/>
            <Label Grid.Row="1" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Start" Text="A" TextColor="Orange"/>
            <Label Grid.Row="1" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="End" Text="C" TextColor="Orange"/>
            <Label Grid.Row="1" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Start" Text="B" TextColor="RoyalBlue"/>
            <Label Grid.Row="1" Grid.Column="1" HorizontalOptions="End" VerticalOptions="End" Text="D" TextColor="RoyalBlue"/>
            <BoxView Grid.Row="1" Grid.Column="2" Color="Aquamarine" Margin="10"/>
            <Label Grid.Row="1" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" Text="0" x:Name="box5" TextColor="Black"/>

            <BoxView Grid.Row="2" Grid.Column="0" Color="LightBlue" Margin="10"/>
            <Label Grid.Row="2" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" Text="0" x:Name="box6" TextColor="Black"/>
            <BoxView Grid.Row="2" Grid.Column="1" Color="Aquamarine" Margin="10"/>
            <Label Grid.Row="2" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" Text="0" x:Name="box7" TextColor="Black"/>
            <BoxView Grid.Row="2" Grid.Column="2" Color="LightBlue" Margin="10"/>
            <Label Grid.Row="2" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" Text="0" x:Name="box8" TextColor="Black"/>
        </Grid>
        <Button Grid.Column="1" Grid.Row="2" Text="A" BackgroundColor="Orange" Margin="10" Clicked="BtnA"/>
        <Button Grid.Column="2" Grid.Row="2" Text="B" BackgroundColor="RoyalBlue" Margin="10" Clicked="BtnB"/>
        <Button Grid.Column="3" Grid.Row="2" Text="C" BackgroundColor="Orange" Margin="10" Clicked="BtnC"/>
        <Button Grid.Column="4" Grid.Row="2" Text="D"  BackgroundColor="RoyalBlue" Margin="10" Clicked="BtnD"/>

        <Button Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" Text="Nullázás" BackgroundColor="Snow" Margin="10" Clicked="ClearBtn"/>
    </Grid>

</ContentPage>
